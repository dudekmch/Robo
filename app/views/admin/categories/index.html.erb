    <h1>Kategorie</h1>

    <%= link_to new_admin_category_path, class: "btn btn-success" do %>
        <span class="fa fa-plus"></span>Dodaj nową kategorie
    <% end %>

    <hr /> 

    <table class="table table-striped">
        <thead>
            <tr>
                <th><%= sort_link(@search, :name, "Nazwa") %></th>
                <th class ="text-center">Akcje</th>
            </tr>
        </thead>
        <tbody>
            <% @categories.each do |category| %>
                <tr>
                    <td><%= category.name %></td>
                    <td align="center">
                        <%= link_to "Edycja", edit_admin_category_path(category), class: "btn btn-default btn-xs" %>
                        <%= link_to "Usuń", admin_category_path(category), 
                        method: :delete,
                        data: { confirm: 'Jesteś pewien?'},
                        class: "btn btn-danger btn-xs" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
